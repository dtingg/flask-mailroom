{% extends "base.jinja2" %}

{% block subtitle %}Add donation{% endblock subtitle %}

{% block content %}
<form method="POST">

    {% if error %}<p>{{ error }}</p>{% endif %}
    <label for="donor-input">Donor: </label><input id="donor-input" type="text" name="donor"><br>
    <label for="amount-input">Amount: </label><input id="amount-input" type="number" name="amount"><br><br>
    <input type="submit" value="Add Donation">
</form>
{% endblock content %}
